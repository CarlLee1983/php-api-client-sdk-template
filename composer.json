{
    "name": "{{PACKAGE_NAME}}",
    "description": "{{PACKAGE_DESCRIPTION}}",
    "type": "library",
    "keywords": [
        "php",
        "sdk",
        "api",
        "client"
    ],
    "homepage": "https://github.com/{{REPO_OWNER}}/{{REPO_NAME}}",
    "license": "MIT",
    "authors": [
        {
            "name": "{{AUTHOR_NAME}}",
            "email": "{{AUTHOR_EMAIL}}",
            "homepage": "https://github.com/{{REPO_OWNER}}",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/{{REPO_OWNER}}/{{REPO_NAME}}/issues",
        "source": "https://github.com/{{REPO_OWNER}}/{{REPO_NAME}}",
        "docs": "https://github.com/{{REPO_OWNER}}/{{REPO_NAME}}#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/{{REPO_OWNER}}"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "{{NAMESPACE_ESCAPED}}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{NAMESPACE_ESCAPED}}\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "{{NAMESPACE_ESCAPED}}\\Laravel\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text"
    }
}